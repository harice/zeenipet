<?php } else { ?>
<?php if ((float) $this->getSource()->getDepositAmount()): ?>
    <tr>
        <td class="label"><strong><?php echo Mage::helper('deposit')->__('Deposit Refunded') ?></strong></td>
        <td><strong><?php echo $this->getSource()->getDepositAmount(); ?></strong></td>
    </tr>
<?php endif; 
}?>

