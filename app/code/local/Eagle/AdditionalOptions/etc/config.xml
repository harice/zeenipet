<?xml version="1.0"?>
<config> 
	<modules>
		<Eagle_AdditionalOptions>
			<version>0.0.1</version>
		</Eagle_AdditionalOptions>
	</modules>
	<global>
		<models>
			<eagle_additionaloptions>
				<class>Eagle_AdditionalOptions_Model</class>
			</eagle_additionaloptions>
		</models>
	</global>
	<frontend>
		<events>
			<catalog_product_load_after>
				<observers>
					<eagle_additionaloptions>
						<class>eagle_additionaloptions/observer</class>
						<method>catalogProductLoadAfter</method>
						<type>singleton</type>
					</eagle_additionaloptions>
				</observers>
			</catalog_product_load_after>                                      
            <sales_convert_quote_item_to_order_item>
			    <observers>
			        <extra_options>
			            <type>model</type>
			            <class>eagle_additionaloptions/observer</class>
			            <method>salesConvertQuoteItemToOrderItem</method>
			        </extra_options>
			    </observers>
			</sales_convert_quote_item_to_order_item>
        </events>
	</frontend>
</config> 