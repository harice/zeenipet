<?xml version="1.0"?>
<config>
    <modules>
        <Indies_Fee>
            <version>3.2.0</version>
			<depends>Indies_Partialpayment</depends>
        </Indies_Fee>
    </modules>
    <frontend>
        <routers>
            <fee>
                <use>standard</use>
                <args>
                    <module>Indies_Fee</module>
                    <frontName>fee</frontName>
                </args>
            </fee>
        </routers>
        <layout>
            <updates>
                <fee>
                    <file>fee.xml</file>
                </fee>
            </updates>
        </layout>
		<translate>
            <modules>
                <fee>
                    <files>
                        <default>Indies_Partialpayment.csv</default>
                    </files>
                </fee>
            </modules>
        </translate>
    </frontend>
    <admin>
        <routers>
			<fee>
				<use>admin</use>
				<args>
					<module>Indies_Fee</module>
					<frontName>fee</frontName>
				</args>
			</fee>
        </routers>
    </admin>
    <adminhtml>
		<layout>
			<updates>
				<fee>
					<file>fee.xml</file>
				</fee>
			</updates>
		</layout>
		<translate>
            <modules>
                <fee>
                    <files>
                        <default>Indies_Partialpayment.csv</default>
                    </files>
                </fee>
            </modules>
        </translate>
    </adminhtml>   
    <global>
    	<sales>
            <quote>
                <totals>
                    <fee>
                        <class>fee/sales_quote_address_total_fee</class>
						<after>subtotal</after>
                    </fee>
                </totals>
            </quote>
            <order_invoice>
                <totals>
                    <fee>
                        <class>fee/sales_order_total_invoice_fee</class>
						<after>grand_total</after>
                    </fee>
                </totals>
            </order_invoice>
            <order_creditmemo>
                <totals>
                    <fee>
                        <class>fee/sales_order_total_creditmemo_fee</class>
						<after>grand_total</after>
                    </fee>
                </totals>
            </order_creditmemo>
        </sales>
        <events>
        	<paypal_prepare_line_items>
        		<observers>
        			<paypal_prepare_line_items>
        				<class>fee/observer</class>
                        <method>updatePaypalTotal</method>
        			</paypal_prepare_line_items>
        		</observers>
        	</paypal_prepare_line_items>
           	<sales_order_invoice_save_after>
                <observers>
                    <sales_order_invoice_save_after>
                        <class>fee/observer</class>
                        <method>invoiceSaveAfter</method>
                    </sales_order_invoice_save_after>
                </observers>
            </sales_order_invoice_save_after>
            <sales_order_creditmemo_save_after>
               <observers>
                   <sales_order_creditmemo_save_after>
                       <class>fee/observer</class>
                       <method>creditmemoSaveAfter</method>
                   </sales_order_creditmemo_save_after>
               </observers>
           </sales_order_creditmemo_save_after>
        </events>
        <fieldsets>
            <sales_convert_quote_address>
                <fee_amount><to_order>*</to_order></fee_amount>
                <base_fee_amount><to_order>*</to_order></base_fee_amount>
            </sales_convert_quote_address>
        </fieldsets>
        <pdf>
            <totals>
                <fee translate="title">
                    <title>Amount to be Paid Later</title>
                    <source_field>fee_amount</source_field>
                    <font_size>7</font_size>
                    <display_zero>0</display_zero>
                    <sort_order>650</sort_order>
                    <amount_prefix>-</amount_prefix>
                </fee>
            </totals>
        </pdf>
        <models>
			<sales>
                <rewrite>
                    <quote_item>Indies_Fee_Model_Quote_Item</quote_item>
                </rewrite>
            </sales>
            <fee>
                <class>Indies_Fee_Model</class>
                <resourceModel>fee_mysql4</resourceModel>
            </fee>
            <fee_mysql4>
                <class>Indies_Fee_Model_Mysql4</class>
                <entities>
                    <fee>
                        <table>fee</table>
                    </fee>
                </entities>
            </fee_mysql4>
        </models>
        <resources>
            <fee_setup>
                <setup>
                    <module>Indies_Fee</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </fee_setup>
            <fee_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </fee_write>
            <fee_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </fee_read>
        </resources>
        <blocks>
            <fee>
				<class>Indies_Fee_Block</class>
            </fee>
		   <adminhtml>
                <rewrite>
					<sales_order_totals>Indies_Fee_Block_Adminhtml_Sales_Order_Totals</sales_order_totals>
                    <sales_order_invoice_totals>Indies_Fee_Block_Adminhtml_Sales_Order_Invoice_Totals</sales_order_invoice_totals>
					<sales_order_creditmemo_totals>Indies_Fee_Block_Adminhtml_Sales_Order_Creditmemo_Totals</sales_order_creditmemo_totals>
                </rewrite>
           </adminhtml>
        </blocks>
        <helpers>
            <fee>
                <class>Indies_Fee_Helper</class>
            </fee>
        </helpers>
    </global>
    <default>
    	<sales>
            <totals_sort>
            	<fee>110</fee>
            </totals_sort>
        </sales>
    </default>
</config>