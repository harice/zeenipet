<?xml version="1.0"?>
<config>
	<tabs>
		<magentothem translate="label" module="themeoptions">
			<label>Magentothem</label>
			<sort_order>205</sort_order>
		</magentothem>
	</tabs>
	<sections>
		<themeoptions translate="label" module="themeoptions">
			<label>Theme Options</label>
			<tab>magentothem</tab>
			<sort_order>131</sort_order>
			<show_in_default>1</show_in_default>
			<show_in_website>1</show_in_website>
			<show_in_store>1</show_in_store>
			<groups>
				<themeoptions_config translate="label">
					<label>Theme Options Config</label>
					<frontend_type>text</frontend_type>
					<sort_order>1</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>1</show_in_store>
					<fields>					
                        <theme_color translate="label">
                            <label>Theme Color: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>
								themeoptions/config_color
							</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </theme_color>
                        <menu_style translate="label">
                            <label>Menu Style: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>
								themeoptions/config_menu
							</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </menu_style>

                        <grid_product translate="label">
                            <label>Grid Product Items: </label>
                            <frontend_type>select</frontend_type>
                            <source_model>
								themeoptions/config_grid
							</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </grid_product>
					</fields>
				</themeoptions_config>						
			</groups>
		</themeoptions>
	</sections>
</config>


