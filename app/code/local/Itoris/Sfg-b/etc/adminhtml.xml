<config>
<menu>
            <system>
                <children>
                    <itoris_extensions translate="title">
						<children>
							<sfg_admin_main module="sfg">
								<title>SmartFormer Gold</title>
								<action>itoris_sfg/admin_index</action>
								<sort_order>1</sort_order>
								<children>
									<sfg_admin_formmanager>
										<title>Form Manager</title>
										<action>itoris_sfg/admin_form</action>
									</sfg_admin_formmanager>
									<sfg_admin_pluginmanager>
										<title>Plugin Manager</title>
										<action>itoris_sfg/admin_pluginmanager</action>
									</sfg_admin_pluginmanager>
								</children>
							</sfg_admin_main>
						</children>
                    </itoris_extensions>
                </children>
            </system>
        </menu>
        <layout>
			<updates>
				<itoris_sfg>
					<file>itoris_sfg.xml</file>
				</itoris_sfg>
			</updates>
		</layout>
        <acl>
        	<resources>
	            <admin>
	                <children>
	                    <system>
	                        <children>
	                            <itoris_extensions>
	                            	<title>IToris Extensions</title>
	                            	<children>
	                                    <sfg_admin_main>
	                                        <title>SmartFormer Gold</title>
	                                        <children>
											<sfg_admin_formmanager>
												<title>Form Manager</title>
											</sfg_admin_formmanager>
											<sfg_admin_pluginmanager>
												<title>Plugin Manager</title>
											</sfg_admin_pluginmanager>
										</children>
	                                    </sfg_admin_main>
	                                </children>
	                            </itoris_extensions>
	                        </children>
	                    </system>
	                </children>
	            </admin>
	        </resources>
        </acl>
</config>
